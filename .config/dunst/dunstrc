    foreground              = "#b5b5bc"
    timeout                 = 2

[global]
    # The format of the message.  Possible variables:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p progress value if set ([ 0%] to [100%]) or nothing
    format                  = "%s\n%b"
    geometry                = "450x5-35+55"
    monitor                 = 0
    transparency            = 0
    separator_height        = 2
    padding                 = 12
    horizontal_padding      = 15
    separator_color         = frame
    idle_threshold          = 120
    font                    = Roboto Bold 8
    history_length          = 5
    show_age_threshold      = 60
    sort                    = yes
    shrink                  = yes
    indicate_hidden         = yes
    word_wrap               = yes
    ignore_newline          = yes
    show_indicators         = yes
    alignment               = left
    icon_position           = left
    max_icon_size           = 0
    icon_path            = /usr/share/icons/paper/16x16
    startup_notification    = false
    browser                 = /usr/bin/firefox -new-tab

[shortcuts]
    close                   = ctrl+space
    close_all               = ctrl+shift+space
    history                 = ctrl+grave
    context                 = ctrl+shift+period


